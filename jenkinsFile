pipeline {
    agent any

    environment {
        // Jenkins credential ID for config.properties
        CONFIG_FILE = credentials('SF_CONFIG_FILE')
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Prepare Config') {
            steps {
                script {
                    // Create resources folder
                    bat 'mkdir src\\main\\resources'

                    // Copy config.properties into resources
                    bat "copy ${CONFIG_FILE} src\\main\\resources\\config.properties"

                    echo "✅ Config file prepared at src/main/resources/config.properties"
                }
            }
        }

        stage('Build & Test') {
            steps {
                // Run tests with TestNG suite
                bat 'mvn clean test -DsuiteXmlFile=testng.xml'
            }
        }
    }

    post {
        always {
            // Collect JUnit-compatible TestNG results
            junit 'target/surefire-reports/*.xml'

            // Archive HTML reports if generated
            archiveArtifacts artifacts: 'target/surefire-reports/*.html', allowEmptyArchive: true
        }

        success {
            echo "✅ All Selenium + TestNG tests passed successfully."
        }
        failure {
            echo "❌ Some tests failed! Please check reports in Jenkins."
        }
    }
}
