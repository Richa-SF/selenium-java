pipeline {
    agent any

    environment {
        CONFIG_FILE = credentials('SF_CONFIG_FILE')
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Prepare Config') {
            steps {
                script {
                    // Create resources folder only if it doesn't exist
                    bat 'if not exist src\\main\\resources mkdir src\\main\\resources'

                    // Copy config.properties
                    bat "copy ${CONFIG_FILE} src\\main\\resources\\config.properties"

                    echo "✅ Config file prepared at src/main/resources/config.properties"
                }
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean test -DsuiteXmlFile=testng.xml'
            }
        }
    }

    post {
        always {
            // Publish test results (JUnit-compatible XML from TestNG via Surefire)
            junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'

            // Archive any HTML reports
            archiveArtifacts artifacts: 'target/surefire-reports/*.html', allowEmptyArchive: true
        }

        success {
            echo "✅ All Selenium + TestNG tests passed successfully."
        }
        failure {
            echo "❌ Some tests failed! Please check reports in Jenkins."
        }
    }
}
