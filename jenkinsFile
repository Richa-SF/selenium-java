pipeline {
    agent any

    tools {
        maven 'M3'         // <-- Name of Maven configured in Jenkins
        jdk 'jdk-17'       // <-- Name of JDK configured in Jenkins
    }

    environment {
        CONFIG_FILE = credentials('SF_CONFIG_FILE')  // Your Salesforce config file credential
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Prepare Config') {
            steps {
                script {
                    // Ensure resources folder exists
                    bat 'if not exist src\\main\\resources mkdir src\\main\\resources'

                    // Copy config.properties from Jenkins credentials
                    bat "copy ${CONFIG_FILE} src\\main\\resources\\config.properties"

                    echo "✅ Config file prepared at src/main/resources/config.properties"
                }
            }
        }

        stage('Build & Test') {
            steps {
                // Run tests with TestNG suite
                bat 'mvn -B clean test -DsuiteXmlFile=testng.xml'
            }
        }

        stage('Allure Report') {
            steps {
                // Generate Allure report in Jenkins
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: 'target/allure-results']]
                ])
            }
        }
    }

    post {
        always {
            // ✅ Archive Allure raw results so they can be reused/downloaded
            archiveArtifacts artifacts: 'target/allure-results/**', fingerprint: true

            // ✅ Archive TestNG XML & HTML reports as backup
            junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'target/surefire-reports/*.html', allowEmptyArchive: true
        }

        success {
            echo "✅ All Selenium + TestNG tests passed successfully."
        }
        failure {
            echo "❌ Some tests failed! Please check Allure report in Jenkins."
        }
    }
}
